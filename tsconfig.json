{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/app/layout.jsx",
    "src/components/layouts/Header.jsx",
    "src/components/layouts/Sidebar.jsx",
    "src/app/providers.tsx",
    "src/lib/Toast.jsx",
    "src/app/contents/articles/page.jsx",
    "src/contenxt/Global.js"
  ],
  "exclude": ["node_modules"]
}
